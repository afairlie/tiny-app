<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
      <% if (user === undefined) { %>
        <form class='form-inline'>
          <button class='btn btn-light text-success btn-sm mr-2' formmethod='GET' formaction='/register' type='submit'>register</button>
          <button class='btn btn-outline-light btn-sm ml-2' formmethod='GET' formaction='/login' type='submit'>login</button>
        </form>
      <% } else { %>
        <% console.log(user) %>
        <form class='navbar'>
          <div class='control mr-sm-2'>logged in as: <%= user.email %></div>
          <button class='btn btn-outline-dark btn-sm ml-2' formmethod='POST' formaction='/logout' type='submit'>logout</button>
        </form>
      <% }; %>
    </div>
  </nav>
</header>